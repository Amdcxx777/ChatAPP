<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/profile_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf = "@+id/message_profile_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="40dp"
            android:background = "@drawable/receiver_messages_layout"
            android:text = "@string/receiver_messages_here"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:textSize = "14sp"
            android:textStyle = "bold"
            android:textColor = "@android:color/black" />

        <TextView
            android:id = "@+id/receiver_message_time"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text="@string/sender_messages"
            android:textSize="10sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/tab_indicator_text"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd = "true"
    android:layout_margin = "5dp"
    android:orientation="vertical">

    <ImageView
        android:id = "@+id/message_sender_image_view"
        android:layout_width = "150dp"
        android:layout_height = "150dp"
        android:scaleType = "centerCrop"
        android:layout_marginTop = "10dp"/>

    <TextView
        android:id = "@+id/sender_message_time_image"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_gravity="right"
        android:text="@string/sender_time"
        android:textSize="10sp"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/tab_indicator_text"
        tools:ignore="RtlHardcoded" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart = "true"
        android:layout_margin = "5dp"
        android:orientation="vertical">

    <ImageView
        android:id = "@+id/message_receiver_image_view"
        android:layout_width = "150dp"
        android:layout_height = "150dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "50dp"
        android:scaleType = "centerCrop" />

        <TextView
            android:id = "@+id/receiver_message_time_image"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart = "55dp"
            android:layout_gravity="left"
            android:text="@string/sender_time"
            android:textSize="10sp"
            android:paddingHorizontal="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/tab_indicator_text"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentEnd = "true"
        android:orientation="vertical">

    <TextView
        android:id = "@+id/sender_message_text"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/sender_messages_layout"
        android:text="@string/sender_messages"
        android:textSize="14sp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id = "@+id/sender_message_time"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/sender_messages"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@android:color/tab_indicator_text" />
    </LinearLayout>
</RelativeLayout>